<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/grey</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textColor">#25282B</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:background">@color/toolbar_background</item>
    </style>

    <style name="expandedViewTextStyle">
        <item name="android:textSize">@dimen/expaneded_textview_font</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>
</resources>
